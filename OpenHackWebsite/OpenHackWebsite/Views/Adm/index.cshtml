<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <script src="https://mcapi.us/scripts/minecraft.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>
    <script src="~/js/scripts.js"></script>
    <link href="~/css/style.css" rel="stylesheet" />
    


    <script>
        $(document).ready(function () {
            loadServerList();
        });
        
    </script>

</head>



<body>
    <div class="divMargin">
        <div class="panel header">
            <h1>TEAM # 1</h1>
            <img src="css/images/logo.jpg" class="logoOpenHack" />
        </div>


        <div class="panel">
            <span id="txtLastUpdateList" class="lastListUpdate"></span>
            <input type="button" onclick="showPopUpNewInstace()" value="Add Instance" class="btn" />
            <div class="scrollTable">
                <table id="tbServers" class="tableServer">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>IP</th>
                            <th>RCON</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="lstServers"></tbody>
                </table>
            </div>
        </div>

        <div id="graphicPopUp" class="bgPopUp" style="display:none">
            <div class="graphicPopUpPanel">
                <span class="icoClose" onclick="closeGraphicPopUp()"></span>
                <div class="server-status">
                    Server Status:
                    <span id="txtServerStatus"></span>
                    <div id="serverData">
                        Last update:<span id="txtUltimoUpdate"></span>&nbsp;Last online:<span id="txtUltimoOnline"></span><br />
                        Online users:<span id="txtUsers"></span>
                    </div>
                </div>
                <canvas id="myChart" class="graficoOnline"></canvas>
            </div>
        </div>

        <div id="newInstancePopUp" class="bgPopUp" style="display:none">
            <div class="newInstancePopUpPanel">
                Adding new instance
                <input type="text" placeholder="Instance name" id="txtInstanceName" class="input" />
                <br />
                <input type="button" onclick="addInstance()" class="btn" value="Add" />
                <input type="button" onclick="closePopUpNewInstance()" class="btn" value="Cancel" />
            </div>
        </div>
    </div>
</body>

</html>

